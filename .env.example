# copy this file to .env and fill in your keys

# required for posting real news
NEWSAPI_KEY=your_newsapi_key_here

# twitter (leave empty for simulation mode)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
TWITTER_BEARER_TOKEN=

# ollama settings
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:4B

# bot personality: chill, hyped, or shitpost
PERSONALITY_MODE=chill

# posting settings
POST_INTERVAL_SECONDS=1800
MAX_POSTS_PER_MONTH=500

# quiet hours (24h format)
QUIET_HOURS_START=2
QUIET_HOURS_END=7

# hashtags
USE_HASHTAGS=true

# set to true to allow creative prompts without news (for testing only!)
SIMULATION_MODE=false
